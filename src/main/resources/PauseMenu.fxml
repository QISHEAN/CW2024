<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>

<Pane xmlns="http://javafx.com/javafx/21.0.5" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.controller.PauseMenuController"
      style="-fx-background-image: url('/pause.jpg'); -fx-background-size: cover;"
      prefWidth="1300" prefHeight="750">

    <!-- Title Label -->
    <Label fx:id="pauseTitleLabel" layoutX="561.0" layoutY="240.0"
           style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"
           text="Pause Menu"/>

    <!-- Resume Button -->
    <Button fx:id="resumeButton" layoutX="571.0" layoutY="351.0"
            prefHeight="40.0" prefWidth="150.0"
            text="Resume"
            onAction="#onResumeClicked"/>

    <!-- Restart Button -->
    <Button fx:id="restartButton" layoutX="571.0" layoutY="410.0"
            prefHeight="40.0" prefWidth="150.0"
            text="Restart"
            onAction="#onRestartClicked"/>

    <!-- Exit to Main Menu Button -->
    <Button fx:id="exitToMainMenuButton" layoutX="571.0" layoutY="469.0"
            prefHeight="40.0" prefWidth="150.0"
            text="Exit to Main Menu"
            onAction="#onExitToMainMenuClicked"/>

</Pane>
