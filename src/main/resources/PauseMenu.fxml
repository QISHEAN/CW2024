<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>

<StackPane fx:id="pauseRoot" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.demo.controller.PauseMenuController"
           prefWidth="1300" prefHeight="750">
    <!-- Background Image -->
    <ImageView fitWidth="1350" fitHeight="800">
        <Image url="@/pause.jpg"/>
    </ImageView>

    <!-- Button Container -->
    <VBox alignment="CENTER" spacing="20">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <Button text="Resume" onAction="#onResumeClicked"/>
        <Button text="Restart" onAction="#onRestartClicked"/>
        <Button text="Exit to Main Menu" onAction="#onExitToMainMenuClicked"/>
    </VBox>
</StackPane>
