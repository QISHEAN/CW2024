<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo.controller.LeaderboardController"
            style="-fx-background-image: url('/leaderboard.jpg');
                   -fx-background-size: cover;
                   -fx-background-position: center;
                   -fx-background-repeat: no-repeat;">

    <ListView fx:id="leaderboardListView" layoutX="50" layoutY="50" prefHeight="600" prefWidth="1200"
              style="
                -fx-background-color: rgba(0, 0, 0, 0.4);
                -fx-control-inner-background: transparent;
                -fx-font-size: 20px;
                -fx-font-family: 'Arial';
                -fx-text-fill: white;
              " />

    <Button fx:id="backButton" text="Back to Menu" layoutX="50" layoutY="700" onAction="#backToMenu"
            style="
                -fx-background-color: rgba(0,0,0,0.7);
                -fx-text-fill: white;
                -fx-font-size: 18px;
                -fx-font-family: 'Arial';
                -fx-background-radius: 10;
                -fx-padding: 10 20;
            " />
</AnchorPane>
