<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>

<Pane style="-fx-background-image: url('/menuScreen.jpg'); -fx-background-size: cover;"
      xmlns="http://javafx.com/javafx/21.0.5" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.controller.MenuController">
    <!-- Title Label -->
    <Label fx:id="titleLabel" layoutX="561.0" layoutY="240.0"
           style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: 'font name';"
           text="Sky Battle"/>

    <!-- Start Game Button -->
    <Button fx:id="startButton" layoutX="571.0" layoutY="351.0" onAction="#handleStartButton" prefHeight="40.0"
            prefWidth="150.0" text="Start Game"/>

    <!-- Endless Mode Button -->
    <Button fx:id="endlessModeButton" layoutX="571.0" layoutY="410.0" onAction="#startEndlessMode" prefHeight="40.0"
            prefWidth="150.0" text="Endless Mode"/>

    <!-- Leaderboard Button -->
    <Button fx:id="leaderboardButton" layoutX="571.0" layoutY="469.0" onAction="#showLeaderboard" prefHeight="40.0"
            prefWidth="150.0" text="Leaderboard"/>

    <!-- Sound Settings Button -->
    <Button fx:id="soundSettingsButton" layoutX="571.0" layoutY="528.0" onAction="#openSoundSettings" prefHeight="40.0"
            prefWidth="150.0" text="Sound Settings"/>

    <!-- Exit Button -->
    <Button fx:id="exitButton" layoutX="571.0" layoutY="587.0" onAction="#handleExitButton" prefHeight="40.0"
            prefWidth="150.0" text="Exit"/>
</Pane>
